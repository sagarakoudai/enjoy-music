<h1>Songs</h1>

<div class="row pt-3">
  <% @songs.each do |song| %>

    <div class="col-4 mb-5">
      <%= link_to song_path(song) do %>
        <%= attachment_image_tag song, :image, :fill,300,300, format: 'jpeg', class: "border" %><br>
      <% end %>
      <audio src="<%= url_for(song.file.url) %>", controls></audio><br>
      <%= render 'favorites/form', song: song %>
      <span class="lead mr-3"><%= song.title %></span>
      <span class="small"><%= song.song_style.style %></span><br>
      <%= song.user.name %>
    </div>
  <% end %>
</div>
<div class="ml-5">
  <h1 class="mb-4">New Song</h1>
      <%= form_with model: @song, local: true do |f| %>

    <div class="mb-4 ml-4">
      <%= f.label "・楽曲ファイル" %><br>
      <%= f.file_field :file %>
    </div>

    <div class="mb-4 ml-4">
      <%= f.label "・画像（任意）" %><br>
      <%= f.attachment_field :image %>
    </div>

    <div class="mb-4 ml-4">
      <%= f.label "・タイトル" %><br>
      <%= f.text_field :title %>
    </div>

    <div class="mb-4 ml-4">
      <%= f.label "・楽曲形式" %><br>
      <%= f.collection_select :song_style_id, SongStyle.all, :id, :select_song_style  %>
    </div>

    <div class="mb-4 ml-4">
      <%= f.label "・楽曲詳細(任意）" %><br>
      <%= f.text_area :detail, size: "60x4" %>
    </div>

    <div class="mb-4 ml-4">
      <%= f.submit "アップロード", class: 'btn btn-outline-info' %>
    </div>
  <% end %>
</div>
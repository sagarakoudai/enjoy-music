<h1>enjoy music!</h1>

<h1>新しい曲</h1>
<% @songs.last(3).each do |song| %>

 <%= link_to song_path(song) do %>
   <%= attachment_image_tag song, :image, :fill,300,300, format: 'jpeg' %><br>
 <% end %>

 <audio src="<%= url_for(song.file.url) %>", controls></audio><br>

 <%= song.title %><br>

<% end %>



<% song.comments.order(id: "desc").each do |comment| %>

  <div class="row mb-3">
    <%= link_to user_path(comment.user) do %>
      <%= attachment_image_tag comment.user, :image, :fill,100,100, format: 'jpeg', fallback: "no_image.jpg", size: "50x50", class: "border rounded-circle" %><br>
    <% end %>

    <table class="table col-8">
      <tr><td>
        <%= link_to "#{comment.user.name}", user_path(comment.user), class: "mr-5" %>
        <% if comment.user == current_user %>
          <%= link_to "削除", song_comment_path(comment.song, comment), method: :delete, remote: true %>
        <% end %>
      </td></tr>
      <tr><td>
        <p class="word-break-break-all"><%= comment.body %></p>
        </td></tr>
    </table>

  </div>
<% end %>
<h1>Users#show</h1>

<%= attachment_image_tag(@user, :image, format: 'jpeg') %><br>
<%= @user.name %><br>
<%= @user.introduction %><br>

<% if @user.id == current_user.id %>
  <%= link_to "プロフィールを編集する", edit_user_path(@user) %>
<% end %>


<% @songs.each do |song| %>
 <%= link_to song_path(song) do %>
   <%= attachment_image_tag song, :image, format: 'jpeg' %><br>
 <% end %>

 <audio src="<%= url_for(song.file.url) %>", controls></audio><br>

 <%= song.title %><br>
<% end %>
<h2>User</h2>
<div class="row mb-5">
  <%= attachment_image_tag @user, :image, :fill,300,300, format: 'jpeg', class: "border rounded-circle" %>

  <table class="table col-8">
    <tr><td class="lead">
      <%= @user.name %>
      <% if @user == current_user %>
        <%= link_to "プロフィールを編集する", edit_user_path(@user) %>
      <% else %>
        <%= render 'relationships/form', user: @user %>
      <% end %>
    </td></tr>
    <tr><td><%= @user.introduction %></td></tr>
    <tr><td>
      <%= link_to "フォロー#{@user.follower.count}人", follow_index_path(@user.id), class: "mx-3" %>
      <%= link_to "フォロワー#{@user.followed.count}人", follower_index_path(@user.id), class: "mx-3" %>
    </td></tr>
    <tr><td><%= link_to "お気に入りの曲", favorites_path(@user) %></td></tr>
  </table>
</div>


<h2>Songs</h2>
<div class="row">
  <% @songs.each do |song| %>

    <div class="col-4 mb-5">
     <%= link_to song_path(song) do %>
       <%= attachment_image_tag song, :image, :fill,300,300, format: 'jpeg', class: "border" %>
     <% end %>
     <audio src="<%= url_for(song.file.url) %>", controls></audio><br>
     <%= song.title %>
    </div>
  <% end %>
</div>
<h1>Users#edit</h1>

<%= form_with model: @user, local: true do |f| %>

  <%= f.label "名前" %>
  <%= f.text_field :name %><br>

  <%= f.label "自己紹介" %>
  <%= f.text_area :introduction %><br>

  <%= f.label "画像" %>
  <%= f.attachment_field :image %><br>

  <%= f.submit "編集", class: 'btn btn-outline-info' %><br />

<% end %>

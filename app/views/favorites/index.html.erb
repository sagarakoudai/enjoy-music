<h1>Favorites#index</h1>

<div class="row">
  <% @user.favorites.each do |favorite| %>

    <div class="col-4 mb-5">
      <%= link_to song_path(favorite.song) do %>
        <%= attachment_image_tag favorite.song, :image, :fill,300,300, format: 'jpeg', class: "border" %><br>
      <% end %>
      <audio src="<%= url_for(favorite.song.file.url) %>", controls></audio><br>
      <span class="lead mr-3"><%= favorite.song.title %></span>
      <span class="small"><%= favorite.song.song_style.style %></span><br>
      <%= favorite.song.user.name %>
    </div>
  <% end %>
</div>
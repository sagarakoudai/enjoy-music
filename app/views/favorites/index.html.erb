<h1>お気に入りの曲</h1>

<div class="row">
  <% @user.favorites.each do |favorite| %>

  <%= render "songs/js_playbutton", song: favorite.song %>

    <div class="col-4 mb-5 mt-3">
      <div class="box">
        <%= link_to song_path(favorite.song) do %>
          <%= attachment_image_tag favorite.song, :image, :fill,300,300, format: 'jpeg', fallback: "no_image.jpg", size: "300x300", class: "border img_index" %>
        <% end %>
        <div class="btn_play" id="btn_<%= favorite.song.id %>"></div>
      </div>
      <audio src="<%= url_for(favorite.song.file.url) %>",  id="audio_<%= favorite.song.id %>", pause="pause"></audio><br>
      <span class="lead mr-3 word"><%= link_to favorite.song.title, song_path(favorite.song) %></span>
      <span class="small"><%= favorite.song.song_style.style %></span><br>
      <%= link_to favorite.song.user.name, user_path(favorite.song.user), class: "word" %>
      <span><%= render 'favorites/form', song: favorite.song %></span>
    </div>
  <% end %>
</div>